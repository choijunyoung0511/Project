<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kopo.readingletter.mapper.UserMapper">

    <select id="findByEmail" parameterType="string" resultType="kopo.readingletter.dto.UserDTO">
        SELECT id,
        email,
        password,
        nickname
        FROM users
        WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="kopo.readingletter.dto.UserDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users(email, password, nickname)
        VALUES(#{email}, #{password}, #{nickname})
    </insert>

</mapper>
